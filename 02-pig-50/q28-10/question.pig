--
u = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);
--
-- >>> Escriba su respuesta a partir de este punto <<<
--

db = FOREACH u GENERATE birthday,SUBSTRING(birthday,0,4) AS anio_largo, SUBSTRING(birthday,2,4) AS anio_corto;

filtro = FOREACH db GENERATE anio_largo,anio_corto;

store filtro into 'output' USING PigStorage(',');
